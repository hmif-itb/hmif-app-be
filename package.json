{
  "name": "hmif-app-be",
  "displayName": "HMIF App API",
  "version": "0.0.1",
  "scripts": {
    "start": "cross-env NODE_ENV=production tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "db:migrations": "drizzle-kit generate:pg --config drizzle.config.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "check": "pnpm run typecheck && pnpm run codecheck",
    "codecheck": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.556.0",
    "@aws-sdk/s3-request-presigner": "^3.563.0",
    "@hono/node-server": "^1.8.2",
    "@hono/swagger-ui": "^0.2.1",
    "@hono/zod-openapi": "^0.9.9",
    "@paralleldrive/cuid2": "^2.2.2",
    "aws-sdk": "^2.1607.0",
    "cross-env": "^7.0.3",
    "csv-parse": "^5.5.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "drizzle-orm": "^0.30.4",
    "drizzle-zod": "^0.5.1",
    "eslint-config-love": "^43.1.0",
    "hono": "^4.1.3",
    "jsonwebtoken": "^9.0.2",
    "open-graph-scraper": "^6.5.1",
    "pg": "^8.11.3",
    "postgres": "^3.4.4",
    "web-push": "^3.6.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.17",
    "@types/web-push": "^3.6.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "drizzle-kit": "^0.20.17",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^3.2.5",
    "tsx": "^3.14.0",
    "typescript": "^5.4.3"
  }
}
